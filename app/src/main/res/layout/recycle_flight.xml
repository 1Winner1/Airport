<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="300dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/flight_image"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/flight_status" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flight_status"
                android:text="Статус"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@color/material_light_blue_A200"
                android:alpha="0.8"
                android:textColor="#fff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/flight_from"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@color/material_light_blue_A200"
                android:alpha="0.8"
                android:textColor="#fff"
                android:textSize="26sp"
                android:text="Test"
                android:layout_alignBottom="@+id/flight_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/flight_to"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@color/material_light_blue_A200"
                android:alpha="0.8"
                android:textColor="#fff"
                android:textSize="26sp"
                android:text="Test"
                android:layout_alignBottom="@+id/flight_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/date_to"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/date_from"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>