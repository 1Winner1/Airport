<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_crew"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">
    <TextView
        android:id="@+id/number_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text=""
        android:gravity="center"
        android:background="#ffff"/>
    <TextView
        android:id="@+id/date_create_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#ffff"
        android:text=""
        android:layout_below="@+id/number_crew"
        />

    <com.dd.morphingbutton.MorphingButton
        android:id="@+id/btnMorph1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mb_white"
        android:gravity="center"
        android:layout_below="@+id/date_create_crew"
        android:layout_alignParentLeft="true"

        />
    <com.dd.morphingbutton.MorphingButton
        android:id="@+id/btnMorph2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mb_white"
        android:layout_below="@+id/date_create_crew"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_crews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMorph2"
        />
</RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>